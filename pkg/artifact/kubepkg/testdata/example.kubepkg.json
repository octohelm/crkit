{
  "apiVersion": "octohelm.tech/v1alpha1",
  "kind": "KubePkg",
  "metadata": {
    "name": "demo",
    "namespace": "default",
    "annotations": {
      "kubernetes.io/description": "demo",
      "ingress.octohelm.tech/gateway": "public+https://{{ .Name }}---{{ .Namespace }}.public,internal+https://{{ .Name }}---{{ .Namespace }}.internal?always=true"
    }
  },
  "spec": {
    "version": "v0.0.2",
    "config": {
      "X": "x"
    },
    "deploy": {
      "kind": "Deployment",
      "spec": {
        "replicas": 1
      }
    },
    "containers": {
      "web": {
        "image": {
          "name": "docker.io/library/nginx",
          "tag": "1.25.0",
          "pullPolicy": "IfNotPresent",
          "platforms": [
            "linux/amd64",
            "linux/arm64"
          ]
        },
        "ports": {
          "http": 80
        }
      }
    },
    "services": {
      "#": {
        "ports": {
          "http": 80
        },
        "paths": {
          "http": "/"
        }
      }
    },
    "volumes": {
      "html": {
        "mountPath": "/usr/share/nginx/html",
        "type": "ConfigMap",
        "spec": {
          "data": {
            "index.html": "<div>hello</div>"
          }
        }
      }
    },
    "images": {
      "side": {
        "name": "docker.io/library/nginx",
        "tag": "1.24.0",
        "platforms": [
          "linux/amd64",
          "linux/arm64"
        ]
      }
    }
  }
}